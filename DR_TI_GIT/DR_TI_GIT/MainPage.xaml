<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DR_TI_GIT.MainPage">
 <ContentPage.Content>
        <StackLayout>
            <Label HorizontalTextAlignment="Center" Text="Zapisy gier"/>
            <ListView x:Name="listView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Name}" HorizontalOptions="FillAndExpand"/>
                                <Button x:Name="wczytajPrzycisk" Text="Wczytaj" CommandParameter="{Binding .}" Clicked="WczytajPrzycisk_Clicked"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
